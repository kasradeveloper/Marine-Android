<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="48dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:elevation="6dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_close" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:weightSum="10">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginEnd="4dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_day_week"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingBottom="4dp"
                            android:maxLines="1"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp"
                            android:fontFamily="@font/font_medium"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_day_of_month_sum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/colorDarkGray"
                            android:textSize="24sp"
                            android:fontFamily="@font/font_medium"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorPrimary" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_user_personnel_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/colorDarkGray"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_user_personnel_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/colorDarkGray"
                            android:paddingBottom="2dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/font_regular"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_month_name_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingBottom="2dp"
                                android:textColor="@color/colorGray"
                                android:textSize="12sp"
                                android:fontFamily="@font/font_regular"
                                android:layout_marginEnd="2dp"
                                android:visibility="visible"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorHorizontalLine"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_shift_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingBottom="2dp"
                                android:textColor="@color/colorGray"
                                android:textSize="12sp"
                                android:fontFamily="@font/font_regular"
                                android:layout_marginStart="2dp"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>



                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <include layout="@layout/line"/>


                <GridLayout
                    android:id="@+id/GridLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:columnCount="2"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:rowCount="3">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_absence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:fontFamily="@font/font_thin"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:padding="8dp"/>

                        <FrameLayout
                            android:id="@+id/absence_view"
                            android:layout_width="88dp"
                            android:layout_height="28dp"
                            android:background="@drawable/stroke_half_radius">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_regular"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingBottom="1dp"
                                android:text="@string/absence"
                                android:textAllCaps="false"
                                android:textColor="@color/colorDanger"
                                android:textSize="13sp"
                                app:elevation="0dp"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="end"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/over_time_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:fontFamily="@font/font_thin"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:padding="8dp"/>

                        <FrameLayout
                            android:id="@+id/over_time_view"
                            android:layout_width="88dp"
                            android:layout_height="28dp"
                            android:background="@drawable/stroke_half_radius">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="@string/over_time"
                                android:textColor="@color/colorWarning"
                                app:elevation="0dp"
                                android:textSize="13sp"
                                android:paddingBottom="1dp"
                                android:fontFamily="@font/font_regular"/>
                        </FrameLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/leave_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:fontFamily="@font/font_thin"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:padding="8dp"/>

                        <FrameLayout
                            android:id="@+id/leave_view"
                            android:layout_width="88dp"
                            android:layout_height="28dp"
                            android:background="@drawable/stroke_half_radius">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/leave"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBrickOrange"
                            app:elevation="0dp"
                            android:fontFamily="@font/font_regular"
                            android:textSize="13sp"
                            android:paddingBottom="1dp"/>
                        </FrameLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="end"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/out_door_duty_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:fontFamily="@font/font_thin"
                            android:textSize="24sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="8dp"/>

                        <FrameLayout
                            android:id="@+id/outdoor_duty_view"
                            android:layout_width="88dp"
                            android:layout_height="28dp"
                            android:background="@drawable/stroke_half_radius">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_regular"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="@string/outdoor_duty"
                                android:textAllCaps="false"
                                android:textColor="@color/colorSecondary"
                                app:elevation="0dp"
                                android:layout_gravity="center"
                                android:textSize="13sp"
                                android:paddingBottom="1dp"/>
                        </FrameLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/presence_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:fontFamily="@font/font_thin"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:padding="8dp"/>

                        <FrameLayout
                            android:id="@+id/presence_view"
                            android:layout_width="88dp"
                            android:layout_height="28dp"
                            android:background="@drawable/stroke_half_radius">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/precense"
                            android:textAllCaps="false"
                            android:textColor="@color/colorSuccessLight"
                            app:elevation="0dp"
                            android:fontFamily="@font/font_regular"
                            android:paddingBottom="1dp"
                            android:textSize="13sp"
                            android:layout_gravity="center"/>
                        </FrameLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="end"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/on_duty_presence_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:fontFamily="@font/font_thin"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:padding="8dp"/>

                        <FrameLayout
                            android:id="@+id/on_duty_presence_view"

                            android:layout_width="88dp"
                            android:layout_height="28dp"
                            android:background="@drawable/stroke_half_radius">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:text="@string/on_duty_presence"
                            android:textAllCaps="false"
                            android:textColor="@color/colorSuccess"
                            app:elevation="0dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:fontFamily="@font/font_regular"/>
                        </FrameLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </GridLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>