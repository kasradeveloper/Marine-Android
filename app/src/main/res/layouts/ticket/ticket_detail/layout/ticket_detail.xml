<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginBottom="4dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_close" />

            <View
                android:id="@+id/view_message"
                android:layout_width="56dp"
                android:layout_height="112dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/top_ticket_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:scaleType="center"
                android:tint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@id/view_message"
                app:layout_constraintEnd_toEndOf="@id/view_message"
                app:layout_constraintStart_toStartOf="@id/view_message"
                app:srcCompat="@drawable/ic_envelope_alt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tracking_code_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text="@string/atency_support"
                android:textColor="@color/colorGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/title_ticket"
                app:layout_constraintTop_toBottomOf="@+id/title_ticket" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_ticket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/font_regular"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/colorDarkGray"
                android:textDirection="locale"
                android:textSize="@dimen/medium_font_size"
                app:fontFamily="@font/font_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/close_detail"
                app:layout_constraintStart_toEndOf="@id/view_message"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/priority_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/font_regular"
                android:gravity="start"
                android:maxLines="1"
                android:layout_marginEnd="24dp"
                android:paddingBottom="2dp"
                android:textColor="@color/colorDanger"
                android:textSize="14sp"
                app:fontFamily="@font/font_regular"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tracking_code_txt"
                app:layout_constraintStart_toEndOf="@+id/tracking_code_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_conversion"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/below_shadow" />
        </FrameLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/linear_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/send_btn"
                android:layout_marginStart="8dp"
                app:spinning_bar_color="@color/colorSuccessLight"
                app:spinning_bar_padding="8dp"
                app:spinning_bar_width="2dp"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:layout_gravity="center|bottom"
                android:src="@mipmap/arrow_circle_up"
                android:background="@android:color/transparent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_gray"
                android:fontFamily="@font/font_regular"
                android:hint="@string/enter_your_answer"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:id="@+id/message_edit_txt"/>
        </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>