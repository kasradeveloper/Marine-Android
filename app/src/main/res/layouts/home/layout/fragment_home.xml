<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_panel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:nestedScrollingEnabled="false"
        app:umanoPanelHeight="128dp"
        app:umanoParallaxOffset="100dp"
        app:umanoScrollableView="@id/recycler_att_table">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

<!--            <fragment-->
<!--                android:id="@+id/map_home"-->
<!--                android:name="com.google.android.gms.maps.SupportMapFragment"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                app:uiScrollGestures="false"-->
<!--                app:uiZoomGestures="false"-->
<!--                tools:context="com.example.currentplacedetailsonmap.MapsActivityCurrentPlace" />-->
            <com.mapbox.mapboxsdk.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_home"/>

            <ImageView
                android:id="@+id/blur_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.5">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/home_page_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_up_gradient"
                        android:elevation="4dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/main_up_gradient"
                        tools:targetApi="lollipop" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="6dp"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:weightSum="10">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/menu_home"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:scaleType="center"
                                    android:fontFamily="@font/unicons"
                                    android:textSize="24sp"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center|top"
                                    android:text="\uebae"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:background="@drawable/card_bg_home"
                                android:gravity="center"
                                android:orientation="vertical"
                                >

                                <TextClock
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_regular"
                                    android:format12Hour="k:mm"
                                    android:format24Hour="k:mm"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="12:80"
                                    android:textAppearance="@style/TextAppearance.FontPath.Regular"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="40sp"
                                    android:id="@+id/text_clock"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/textview_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/font_light"
                                    android:gravity="top"
                                    android:text="Wed  16,2018"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/xsmall_font_size" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="end">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/refresh"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:fontFamily="@font/unicons"
                                    android:textSize="24sp"
                                    android:text="\ue986"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center|top"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|top">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/icon_workplace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/unicons"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_workplace_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:fontFamily="@font/font_regular"
                                android:gravity="center"
                                android:text="@string/finding_gps"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/gps_off_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/font_light"
                                android:text="@string/your_location_is_off"
                                android:textColor="@color/colorBrickOrange"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/turn_on_gps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/solid_half_radius"
                                android:elevation="3dp"
                                android:fontFamily="@font/font_light"
                                android:padding="6dp"
                                android:paddingBottom="1dp"
                                android:text="@string/turn_on_gps"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </FrameLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_weight="6.5"
                    android:gravity="bottom"
                    android:layoutDirection="ltr"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:paddingBottom="24dp">

                        <com.kasra.atency.utils.SmoothSeekBar
                            android:id="@+id/seekBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:paddingStart="34dp"
                            android:paddingEnd="34dp"
                            android:progressDrawable="@android:color/transparent"
                            />
                        <FrameLayout
                            android:id="@+id/spinkit_frame"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@color/colorWhite"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:orientation="horizontal"
                            android:textDirection="ltr"
                            android:weightSum="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/exit_txt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/colorWhite"
                                android:fontFamily="@font/font_light"
                                android:gravity="start|center_vertical"
                                android:text="@string/exit"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/enter_txt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/colorWhite"
                                android:fontFamily="@font/font_light"
                                android:gravity="end|center_vertical"
                                android:text="@string/enter"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </FrameLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_attendnaces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <View
                android:id="@+id/view_panel_up"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorGrayOpa30"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_att_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="visible" />

        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
