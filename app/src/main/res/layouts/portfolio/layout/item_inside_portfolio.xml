<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6.5"
        android:orientation="horizontal">

        <View
            android:id="@+id/color_portfolio_item"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            android:weightSum="2">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/number_portfolio_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_medium"
                    android:gravity="bottom"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/portfolio_time_duration_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/number_portfolio_txt"
                    app:layout_constraintBottom_toBottomOf="@+id/number_portfolio_txt"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/portfolio_request_type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/portfolio_time_duration_txt"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/portfolio_from_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/font_light"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_weight="1.75">

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/btn_accept_portfolio_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/solid_half_radius"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:text="@string/accept"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            app:elevation="0dp"
            app:finalCornerAngle="@dimen/button_half_radius"
            app:initialCornerAngle="@dimen/button_half_radius"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="8dp"
            app:spinning_bar_width="2dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_weight="1.75">

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/btn_reject_portfolio_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/stroke_half_radius"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:text="@string/reject"
            android:textColor="@color/colorDangerLight"
            android:textSize="@dimen/xsmall_font_size"
            app:elevation="0dp"
            app:finalCornerAngle="@dimen/button_half_radius"
            app:initialCornerAngle="@dimen/button_half_radius"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="8dp"
            app:spinning_bar_width="2dp" />
    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>