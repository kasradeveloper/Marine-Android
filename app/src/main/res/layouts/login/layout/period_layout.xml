<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_period"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    tools:showIn="@layout/fragment_requests"
    android:layoutDirection="rtl"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/day_calendar_date_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\ue9bd"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/unicons"
            android:layout_marginEnd="4dp"
            android:textColor="@color/colorDarkGray"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/month_name"
            android:textSize="@dimen/small_font_size"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/font_regular"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_next_period"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_gravity="end"
        app:srcCompat="@drawable/icon_arrow_left"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_previous_period"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_gravity="start"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:srcCompat="@drawable/icon_arrow_right" />
</FrameLayout>
