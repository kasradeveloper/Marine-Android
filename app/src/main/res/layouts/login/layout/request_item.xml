<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="80dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:orientation="horizontal">

            <View
                android:id="@+id/color_my_request_item"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/number_day_request_txt"
                    android:fontFamily="@font/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/time_duration_txt"
                        android:fontFamily="@font/font_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/request_type_txt"
                        android:fontFamily="@font/font_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="15sp"
                        android:layout_marginStart="4dp"
                        />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/from_date_txt"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/font_light"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/time_txt"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/font_light"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_status"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="16dp"
            android:layout_weight="2.5"
            android:background="@drawable/solid_full_radius"
            android:stateListAnimator="@null"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:elevation="0dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHorizontalLine"/>
</FrameLayout>
